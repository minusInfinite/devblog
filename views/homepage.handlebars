<section>
    {{#each posts as |post|}}
        <article class="post">
            <div class="post-header">
                <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
                <span class="timestamp">posted by
                    {{post.user.name}}
                    on
                    {{format_date post.date_created}}</span>
            </div>
            <div class="post-content">
                <p>
                    {{post.content}}
                </p>
            </div>
        </article>
    {{/each}}
</section>